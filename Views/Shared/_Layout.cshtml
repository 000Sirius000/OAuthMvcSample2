<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OAuthMvcSample</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">OAuthMvcSample</a>

            <!-- Mobile burger button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                    aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Content -->
            <div class="collapse navbar-collapse" id="navbarMain">

                <!-- Left menu section -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link" href="/Subroutines/Bmi">ІМТ</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Subroutines/Temp">Температура</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Subroutines/Password">Паролі</a>
                    </li>

                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                Довідники
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Departments">Відділи</a></li>
                                <li><a class="dropdown-item" href="/Positions">Посади</a></li>
                                <li><a class="dropdown-item" href="/Employees">Співробітники</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-info" href="/EmployeeSearch">Пошук</a>
                        </li>

                        <!-- UI Version Demo -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                Інтерфейси
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/EmployeesUi/Legacy">Legacy UI</a></li>
                                <li><a class="dropdown-item" href="/EmployeesUi/New">New UI</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <!-- Right menu (Auth section) -->
                <div class="d-flex">

                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-outline-info me-2" href="/Account/Profile">Профіль</a>
                        <a class="btn btn-danger" href="/Account/Logout">Вийти</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-light me-2" href="/Account/Login">Увійти</a>
                        <a class="btn btn-warning" href="/Account/Register">Реєстрація</a>
                    }

                </div>
            </div>
        </div>
    </nav>

    <main class="container my-4">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
